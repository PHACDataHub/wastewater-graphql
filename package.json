{
  "name": "wastewater",
  "version": "0.0.1",
  "description": "GraphQL Endpoint for waste water surveillance data",
  "main": "build/src/index.js",
  "watch": {
    "compile": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,graphql",
      "runOnChangeOnly": false
    },
    "start": {
      "patterns": [
        "build"
      ]
    }
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint src",
    "clean": "del build",
    "copySchema": "copyfiles src/schema/*.graphql build/",
    "copyVersion": "node version.js",
    "watch": "npm run prepare && (npm-watch compile & npm-watch start)",
    "compile": "tsc",
    "start": "npx functions-framework --target=handler",
    "fix": "eslint --fix .",
    "prepare": "npm run clean && npm run copySchema && npm run copyVersion && npm run compile",
    "posttest": "npm run lint"
  },
  "author": "Luc Belliveau <luc.belliveau@phac-aspc.gc.ca>",
  "license": "MIT",
  "dependencies": {
    "apollo-server-cloud-functions": "^3.10.2",
    "apollo-server-core": "^3.10.2",
    "copyfiles": "^2.4.1",
    "datasource-sql": "^2.0.1",
    "del-cli": "^5.0.0",
    "dotenv": "^16.0.2",
    "graphql": "^16.6.0",
    "knex": "^2.3.0",
    "tedious": "^15.1.0",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^3.1.2",
    "@graphql-eslint/eslint-plugin": "^3.10.7",
    "@types/jest": "^29.0.3",
    "@types/jest-json-schema": "^6.1.1",
    "@types/node": "^14.18.28",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "db2graphql": "^0.8.1",
    "eslint": "^8.23.1",
    "eslint-plugin-prettier": "^4.2.1",
    "graphql-config": "^4.3.5",
    "jest": "^29.0.3",
    "jest-json-schema": "^6.1.0",
    "npm-watch": "^0.11.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
